CREATE TABLE chheangmaiDB.tblLogin ( EmployeeID INT NOT NULL AUTO_INCREMENT , EmployeeName VARCHAR(50) NOT NULL , UserName VARCHAR(50) NOT NULL , PassWord VARCHAR(50) NOT NULL , UserType VARCHAR(50) NOT NULL , Role VARCHAR(50) NOT NULL , Company VARCHAR(50) NOT NULL , JobTitle VARCHAR(50) NOT NULL , Email VARCHAR(50) NOT NULL , Phone VARCHAR(50) NOT NULL , HomePhone VARCHAR(50) NOT NULL , Address VARCHAR(100) NOT NULL , City VARCHAR(50) NOT NULL , StateProvince VARCHAR(50) NOT NULL , ZipPostalCode VARCHAR(50) NOT NULL , CountryRegion VARCHAR(50) NOT NULL , Photo MEDIUMBLOB NOT NULL , PRIMARY KEY (EmployeeID), UNIQUE (Phone), UNIQUE (Email), UNIQUE (UserName)) ENGINE = InnoDB;
